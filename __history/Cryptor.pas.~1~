unit Cryptor;

interface
  function ChesarCrypt(input: string; offset: integer): string;
implementation
  ///<summary>
  ///Шифрует строку методом Цезаря
  ///</summary>
  ///<param name="input">
  ///Входная строка
  ///</param>
  ///<param name="offset">
  ///Сдвиг при шифровании
  ///</param>
  ///<returns>
  ///Зашифрованная строка
  ///</returs>
  function ChesarCrypt(input: string; offset: integer): string;
  var
    output: string;
    counter, StrLen: integer;
  begin
    if offset >=  256 then
      offset := offset mod 256;

    StrLen := Length(input);

    for counter := 0 to (StrLen - 1) do begin
      output := output + chr((ord(input[counter]) + offset) mod 256);
    end;

    ChesarCrypt := output
  end;
end.
